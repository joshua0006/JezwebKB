rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profilePhotos/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /articles/{imageId} {
      // Allow reads for all authenticated users
      allow read: if request.auth != null;
      
      // Allow writes for all authenticated users (we'll handle permission checks in the app)
      allow write: if request.auth != null;
    }
    
    match /articles/images/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /articles/videos/{videoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /articles/additional/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
} 