rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profilePhotos/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /articles/{imageId} {
      // Allow reads for all authenticated users
      allow read: if request.auth != null;
      
      // Allow writes only for admin users
      // Note: This assumes that you have a custom claim or a Firestore document that defines admin status
      // If you're checking admin status differently, adjust this rule accordingly
      allow write: if request.auth != null && 
                     (request.auth.token.admin == true || 
                      request.resource.size < 5 * 1024 * 1024 && 
                      request.resource.contentType.matches('image/.*'));
    }
  }
} 